{{ _view.layout('CakeSilverCms.single') }}
{{ _view.assign('title', article.title) }}
<div class="article article-{{ article.id }}">
    <div class="card">
        <div class="page-header border-bottom border-dark mb-2 py-1">
            <h1 class="h5 d-inline">Article ( {{ article.title }} )</h1>
        </div>
        <div class="card-body p-0">
        	{{ article.content|raw }}
        </div>
    </div>
</div>
